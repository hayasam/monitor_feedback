{{#if active}}
    <section id="categoryMechanism{{ id }}" class="feedback-mechanism feedback-col {{parent.labelPositioning}} {{cssClass}} category-type validate-category{{#if mandatory}} mandatory{{/if}}"
        {{#if mandatory }} data-mandatory="1" data-mandatory-manual-text="{{ mandatoryReminder }}" {{/if}} style="width: {{boxWidth}}; padding-left: {{boxPaddingLeft}}; padding-right: {{boxPaddingRight}};">
        <p class="category-type-label" style="{{parent.generalLabelStyle}}{{ labelStyle }}{{#if mandatory}} {{ parent.mandatoryLabelStyle }}{{/if}}">{{ title }}{{#if mandatory }} {{ parent.mandatorySign }}{{/if}}</p>

        {{#if asDropdown}}
            <select name="category_mechanism_{{ id }}"{{#if multiple}} multiple{{/if}}>
                {{#if defaultOption}}
                    <option value="{{ defaultOption.id }}" selected>{{defaultOption.value}}</option>
                {{/if}}
                {{#each options}}
                    <option value="{{ id }}">{{value}}</option>
                {{/each}}
            </select>
        {{else}}
            {{#each options}}
                <input type="{{ ../inputType }}" id="option{{ key }}" data-parameter-id="{{id}}" name="category_mechanism_{{ ../id }}"
                       value="{{ key }}">
                <label for="option{{ key }}"> {{ value }}</label> &nbsp;
                {{#if ../breakAfterOption}}
                    <br/>
                {{/if}}
            {{/each}}
            {{#if ownAllowed}}
                <label for="ownInput1">{{ ownLabel }}</label>
                <input class="own-category" id="ownInput1" type="text" />
            {{/if}}
        {{/if}}
    </section>
{{/if}}
