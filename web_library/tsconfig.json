{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "types": [
      "i18next",
      "jasmine-jquery"
    ]
  },
  "exclude": [
    "node_modules",
    "!node_modules/@types",
    "typings/browser.d.ts",
    "typings/browser/**",
    "typings/main/**",
    "tools/*.ts",
    "tools/**/*.ts"
  ],
  "compileOnSave": true
}
