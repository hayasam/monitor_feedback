<resources>

    <!-- Base feedback library theme. -->
    <style name="AppTheme.FeedbackLibraryLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigoDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="AppTheme.FeedbackLibraryDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/indigo</item>
        <item name="colorPrimaryDark">@color/indigoDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="DarkDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/DarkTitle</item>
    </style>

    <style name="DarkTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DarkDialogTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#e53935</item>
    </style>
</resources>
