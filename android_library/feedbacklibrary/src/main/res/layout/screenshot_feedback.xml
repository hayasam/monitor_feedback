<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">


    <FrameLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:padding="@dimen/card_padding">

        <TextView
            android:id="@+id/supersede_feedbacklibrary_screenshot_feedback_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/supersede_feedbacklibrary_screenshot_feedback_title"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="40dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45">
                <!-- Layout screenHeight is fixed at the moment (later: relative to the screen size?) -->

                <ImageView
                    android:id="@+id/supersede_feedbacklibrary_screenshot_imageview"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_folder_open_black_24dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <Button
                    android:id="@+id/supersede_feedbacklibrary_annotate_screenshot_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/button_selector_edit"
                    android:minWidth="88dp"
                    android:text="@string/screenshot_edit"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/supersede_feedbacklibrary_select_screenshot_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/blue_button"
                    android:minWidth="88dp"
                    android:text="@string/screenshot_add"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/supersede_feedbacklibrary_remove_screenshot_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/blue_button"
                    android:minWidth="88dp"
                    android:text="@string/screenshot_remove"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

